<div class="container mt-3">
    <div class="row">
        <div class="col-33 stealth">
            <div class="ph-1">
                <h5 class="fs-1">ðŸª› All experiments</h5>

                <ul>
                    {% for experiment in experiments %}
                        <li class="animate-list-entry">
                            <a href="/experiments/{{ experiment.meta.slug }}"
                               class="d-block rounded bg-light-hover p-1 cursor-pointer">
                                    <span class="fs-1 fw-medium mt-0 {% if slug == experiment.meta.slug %}text-gray{% endif %}">
